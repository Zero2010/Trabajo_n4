@model Trabajo_n4.Models.servicio_tipos

@{
    ViewBag.Title = "Edit";
    var nombre = @ViewBag.EditarNombre;
}

<h2>Editar</h2>


@using (Html.BeginForm("Edit", "Veterinaria"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>servicio_tipos</h4>
        <hr />
        <div class="form-group">

            <div class="form-group">
                <label for="id">Id:</label>
                <label name="id" id="id">@ViewBag.Id</label><br />
                <label for="nombre">Nombre:</label>
                <input class="form-control" type="text" name="nombre" id="nombre" placeholder="@ViewBag.EditarNombre" required />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

